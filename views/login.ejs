<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Auth Code</title>
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="/img/icons/AUTH.png" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/login.css">
	<!--===============================================================================================-->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
	<!--===============================================================================================-->
</head>

<body>


	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<a href="https://www.fontspace.com/category/sans-serif"><img
							src="https://see.fontimg.com/api/renderfont4/JReLK/eyJyIjoiZnMiLCJoIjo1MSwidyI6MTI1MCwiZnMiOjQxLCJmZ2MiOiIjMTExMTExIiwiYmdjIjoiIzM1M0Q0QiIsInQiOjF9/QVVUSC1DT0RF/multiple-ranges-regular.png"
							alt="Sans Serif fonts"></a>
					<img id="main-gif" src="/img/logo1.gif" alt="IMG">
				</div>
				<% if (message!=="&nbsp;" && message!=="emailNotFound" && message!=="invalidOTP" ){ %>
					<!-- enter otp sent on email or enter colourCombination -->
					<div id="optmsg">
						<%= message %>
							<br />
							<img id="gtick" src="/img/download.png">
							<br />
							<form action="/otp" method="POST">
								<div class="wrap-input100 validate-input"
									data-validate="Valid OTP is required. Check your mail again.">
									<input class="input100" placeholder="Enter OTP" name="OTP">
									<span class="focus-input100"></span>
									<span class="symbol-input100">
										<i class="fa fa-key" aria-hidden="true"></i>
									</span>
								</div>
								OR
								<div class="wrap-input100 validate-input"
									data-validate="Valid OTP is required. Check your mail again.">
									<input class="input100" placeholder="Enter Colour Combination" name="colourCombination">
									<span class="focus-input100"></span>
									<span class="symbol-input100">
										<i class="fa fa-key" aria-hidden="true"></i>
									</span>
								</div>
								<input class="input100" value=<%= userEmail %> name="email" required style="visibility: hidden; height: 0">
								<div class="container-login100-form-btn">
									<button type="submit" class="login100-form-btn">
										Verify OTP
									</button>
								</div>
							</form>
					</div>
				<% } else if(message=="emailNotFound" ) { %>
					<!-- user not found -->
					<div id="notf">User not found. <a id="tryreg" data-content="Link Hover" class=tryreg
						href="/registration">Try Registering.</a><br /></div>
				<% } else if(message=="invalidOTP" ) { %>
					<!-- if otp fails -->
					<div id="notf">Invalid OTP /Combination <strong>:/</strong> <a id="tryreg" data-content="Link Hover" class=tryreg
						href="/login">Try again.</a><br /></div>
				<% } else { %>
					<!-- login page -->
					<form action="/login" method="POST" class="login100-form validate-form">
						<span class="login100-form-title">
							Member Login
						</span>
						<div class="wrap-input100 validate-input"
							data-validate="Valid email is required: ex@abc.xyz">
							<input class="input100" type="text" name="email" placeholder="Email" required>
							<span class="focus-input100"></span>
							<span class="symbol-input100">
								<i class="fa fa-envelope" aria-hidden="true"></i>
							</span>
						</div>
						<button type="submit" class="login100-form-btn">
							Send OTP and QR
						</button>
					</form>
				<% } %>
			</div>
		</div>
	</div>
	<!--===============================================================================================-->
	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="vendor/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
	<!--===============================================================================================-->
	<script src="js/main.js"></script>

</body>

</html>